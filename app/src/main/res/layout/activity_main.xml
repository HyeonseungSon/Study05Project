<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/carName"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/hyundaiButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="현대자동차 구입"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/kiaButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="기아자동차 구입"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <Button
        android:id="@+id/checkButton"
        android:text="확인"
        android:background="@color/gray"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"></Button>
    <TextView
        android:id="@+id/carCheck"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="자동차 : "
        android:layout_width="match_parent"
        android:layout_height="50dp"></TextView>
    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/startButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="출발"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/runButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="가속"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/turnButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="회전"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/stopButton"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="정지"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <TextView
        android:id="@+id/outputView"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="50dp"></TextView>
</LinearLayout>